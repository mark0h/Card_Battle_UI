
<div class='row'>
  <div class='col-sm-8'>

    <div class="btn-group" id="defend_card_selector" data-toggle="buttons">
      <% @player_one_play_hand.each do |class_card| %>
      <label class="btn btn-default" for="<%= class_card.card_id %>_select">
        <input type="radio" name="defend_selection" id="<%= class_card.card_id %>_defend" value="<%= class_card.card_id %>_defend"><%= image_tag("#{class_card.image_path}", height: 196, width: 140, title: "#{class_card.image_path.gsub(/.png/,'')}", id: 'defend_card_select') %></input>
      </label>
      <% end %>
    </div>
    <br><br>
    <button type="button" class="btn-sm btn-success btn-sm" id='defend_button' data-current_hand="<%= @player_one_play_hand %>" data-count="<%= @player_one_play_hand.length %>">DEFEND</button>
    <button type="button" class='btn-sm btn-warning btn-sm' id='skip_defend_button' data-current_hand="<%= @player_one_play_hand %>" data-count="<%= @player_one_play_hand.length %>">SKIP</button>
    <button type="button" class='btn-sm btn-danger btn-sm' id='forfeit_button' data-current_hand="<%= @player_one_play_hand %>" data-count="<%= @player_one_play_hand.length %>">FORFEIT</button>

  </div>
</div>

<% if @opponent_attack_card %>
  <script type='text/javascript'>
    update_gameplay_middle_opponent("<%= @opponent_attack_card.id %>");
  </script>
<% end %>
