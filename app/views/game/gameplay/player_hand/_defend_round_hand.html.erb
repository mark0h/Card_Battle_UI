
<div class='row'>
  <div class='col-sm-8'>

    <div class="btn-group" id="defend_card_selector" data-toggle="buttons">
      <% @player_one_play_hand.each do |class_card| %>
      <label class="btn btn-default" for="<%= class_card.card_id %>_select">
        <input type="radio" name="defend_selection" id="<%= class_card.card_id %>_defend" value="<%= class_card.card_id %>_defend"><%= image_tag("#{class_card.image_path}", height: 196, width: 140, title: "#{class_card.image_path.gsub(/.png/,'')}", id: 'defend_card_select') %></input>
      </label>
      <% end %>
    </div>

  </div>

  <div class='col-sm-2'>
    <div class='btn btn-success' id='defend_button' data-current_hand="<%= @player_one_play_hand %>" data-count="<%= @player_one_play_hand.length %>">DEFEND</div><br><br>
    <div class='btn btn-warning' id='skip_defend_button' data-current_hand="<%= @player_one_play_hand %>" data-count="<%= @player_one_play_hand.length %>">SKIP</div><br><br>
    <div class='btn btn-danger' id='forfeit_button' data-current_hand="<%= @player_one_play_hand %>" data-count="<%= @player_one_play_hand.length %>">FORFEIT</div><br><br>
  </div>
</div>

<script type='text/javascript'>
  update_gameplay_middle_opponent("<%= @opponent_attack_card.id %>");
</script>
