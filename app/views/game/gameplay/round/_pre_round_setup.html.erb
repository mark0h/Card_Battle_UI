<!-- GETS VARIABLE FROM pre_round_setup.rb -->

<div id="player_deck_show" title="DECK"></div>

<div id="error_popup" title="Error">
</div>

<div class='row'>
  <div class='col-sm-11'>

    <div class='panel panel-default'>
      <div class='panel-heading'>
        <h3 class='panel-title default_panel_header'>Game</h3>
      </div>

      <div class='panel-body'>
        <!-- OPPONENT CARD VIEW         -->
        <div class='row' id='gameplay-opponent'>
          <div class='col-sm-1'>
            <b>OPPONENT</b>
            <div id='opponent_info'></div>
          </div>
          <div class='col-sm-2'>
            <%= image_tag("#{@opponent_class.image_path}", height: 196, width: 140) %>
          </div>
          <div class='col-sm-9'>
            <span id='opponent_play_cards'>

            </span>
          </div>
        </div>
        <hr>

        <!-- MIDDLE PLAY VIEW         -->
        <div class='row' id='gameplay-middle'>
          <div class='col-sm-1'>
            <div id='round_info'></div>
          </div>
          <div class='col-sm-11'>
            <span id='gameplay_middle_update'></span>
          </div>

        </div>
        <hr>

        <!-- PLAYER CARD VIEW         -->
        <div class='row' id='gameplay-player'>
          <div class='col-sm-1'>
            <b>PLAYER</b>
            <div id='player_info'></div>
          </div>
          <div class='col-sm-2'>
            <%= image_tag("#{@player_one_class.image_path}", height: 196, width: 140, id: 'player_deck_stack') %>
          </div>
          <div class='col-sm-9'>
            <span id='player_hand_cards'>
              <% if @player_one_status_list %>
                <% @player_one_status_list.each do |status| %>
                  <%= image_tag("#{status.name}.png", height: 50, width: 50, title: "#{status.name}", id: "player_status_#{status.name}") %><small><b> <%= status.name %>: </b><%= status.affect_text %></small><br>
                <% end %>
              <% end %>
            </span>
          </div>

        </div>

    </div>

  </div>
</div>
