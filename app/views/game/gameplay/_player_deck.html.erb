<h4>CURRENT DECK</h4><br>
<% card_count = 1 %>
<% @player_one_current_deck.each do |card_value| %>
  <% card_count += 1 %>
  <%= image_tag("#{card_value.image_path}", height: 160, width: 114, title: "#{card_value.id}_selected", id: 'card_to_add_to_hand') %>
<% end %>
<span class='btn btn-danger' id='close_player_deck'>Close</span>
