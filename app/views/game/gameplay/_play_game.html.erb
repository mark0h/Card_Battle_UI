

<div id="need_three_cards_error" title="Error">
</div>

<div class='row'>
  <div class='col-sm-11'>

    <div class='panel panel-default'>
      <div class='panel-heading'>
        <h3 class='panel-title default_panel_header'>GAMEPLAY</h3>
      </div>

      <div class='panel-body'>
        <!-- OPPONENT CARD VIEW         -->
        <div class='row' id='gameplay-opponent'>
          <div class='col-sm-1'><b>OPPONENT</b></div>
          <div class='col-sm-2'>
            <%= image_tag("#{@player_one_class.image_path}", height: 196, width: 140) %></div>
          </div>
          <div class='col-sm-8'>
            <span id='opponent_play_cards'></span>
          </div>

        <!-- MIDDLE PLAY VIEW         -->
        <div class='row' id='gameplay-middle'>
            <br><br><br><br>
        </div>
        <!-- PLAYER CARD VIEW         -->
        <div class='row' id='gameplay-player'>
          <div class='col-sm-1'>
            <b>PLAYER</b>
            <div id='player_info'></div>
          </div>
          <div class='col-sm-2'>
            <%= image_tag("#{@player_one_class.image_path}", height: 196, width: 140, id: 'player_deck_stack') %>
          </div>
          <div class='col-sm-8'>
            <span id='player_hand_cards'></span>
          </div>

        </div>

        <hr>
        <!-- PLAY DECK VIEW -->
        <div align='center' id='player_deck_all'></div>
      </div>

    </div>

  </div>
</div>
