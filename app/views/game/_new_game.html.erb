<% get_card_class_list %>

<div id="error_popup" title="Error">
</div>

<div class='row'>
  <div class='col-sm-10'>

    <div class='panel panel-default'>
      <div class='panel-heading'>
        <h3 class='panel-title default_panel_header'>New Game</h3>
      </div>
      <div class='panel-body'>

        <div align='center' class='class_card_notes'>Face off against a computer opponent. Multiplayer coming later!</div><br>

        <!-- CLASS SELECTION -->
        <div class='row'>
          <div class='col-sm-2'>
            <b>Select your class:</b>
          </div>
          <div class='col-sm-8'>
            <div class="btn-group" id="class_selector" data-toggle="buttons">
              <% @class_cards.each do |class_card| %>
              <label class="btn btn-default" for="<%= class_card.name %>_select">
                <input type="radio" name="class_options" id="<%= class_card.name %>_select" value="<%= class_card.id %>_select"><%= image_tag("#{class_card.image_path}", height: 180, width: 129, title: "#{class_card.id}_selected", id: 'new_game_class_select') %></input>
              </label>
                <!-- <button type="button" class="btn btn-default" id="<%= class_card.name %>_select"><%= class_card.name %></button> -->
              <% end %>
            </div>
          </div>
        </div>

        <br><br>

        <!-- OPPONENT SELECTION -->
        <div class='row'>
          <div class='col-sm-2'>
            <b>Select your opponent:</b>
          </div>
          <div class='col-sm-8'>
            <div class="btn-group" id="opponent_selector" data-toggle="buttons">
              <% @class_cards.each do |opponent_card| %>
              <label class="btn btn-default" for="<%= opponent_card.name %>_opponent">
                <input type="radio" name="opponent_options" id="opponent_options" value="<%= opponent_card.id %>_opponent"><%= image_tag("#{opponent_card.image_path}", height: 180, width: 129, title: "#{opponent_card.id}_selected", id: 'new_game_opponent_select') %></input>
              </label>
              <% end %>
            </div>
          </div>
        </div>



        <br><br>
        <div class='col-sm-1'><div class='btn btn-success' id="start_new_game">Start</div></div>
        <div class='col-sm-1'><div class='btn btn-danger' id="cancel_new_game">Cancel</div></div>
      </div><!--  panel body -->
    </div> <!-- panel -->
  </div>
</div>


<!-- CLASS INFO WINDOW -->
<div class='row'>
  <div class='col-sm-10'>

    <div id="class_information">
      <div class='panel panel-default'>
        <div class='panel-heading'>
          <h3 class='panel-title class_info_box'>
            <!-- <div class='class_card_header'></div> -->
            CLASS INFO
          </h3>
        </div>
        <div class='panel-body'>
          <div class='row'>
            <div class='col-sm-6'>
              <div class='class_card_header'></div>
              <div class='class_card_notes'></div>
              <div class='class_card_body'></div>
            </div>
            <div class='col-sm-6'>
              <div class='opponent_card_header'></div>
              <div class='opponent_card_notes'></div>
              <div class='opponent_card_body'></div>
            </div>
          </div>

        </div>
      </div>
    </div> <!-- class_information div -->

  </div>
</div>

<!-- CARD LIST WINDOW -->
<div class='row'>
  <div class='col-sm-10'>
    <span id='class_selected_cards'></span>
  </div>
</div>
